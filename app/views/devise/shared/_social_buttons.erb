<div class="dropdown">
  <a data-toggle="dropdown" href="#"><%= t('view.devise.sign_in_with') %></a>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    <li><%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
          <% end -%>
      <% end -%></li>
  </ul>
</div>

