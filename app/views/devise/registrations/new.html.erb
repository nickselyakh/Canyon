<div class="form-horizontal" role="form">
  <h2><%= t('action.devise.sign_up')%></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div id="error_explanation">
    <%= devise_error_messages! %>
    </div>

    <div class="form-group">
      <%= f.label :uid, t('view.devise.email'), class: 'col-6 col-form-label' %>
      <div class="col-12">
        <%= f.email_field :uid, autofocus: true, class: 'form-control', placeholder: t('view.devise.email') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, t('view.devise.name'), class: 'col-2 col-form-label' %>
      <div class="col-12">
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: t('view.devise.name') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, t('view.devise.password'), class: 'col-2 col-form-label' %>
      <div class="col-12">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('view.devise.password') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t('view.devise.password_confirmation'), class: 'col-8 col-form-label' %>
      <div class="col-12">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('view.devise.password_confirmation') %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('action.sign_up'), class: "btn btn-primary btn-block"%>
    </div>
  <% end %>
</div>