<div class="container">
  <div class="row">
    <div class="col-md-6">
  <h2><%= t('view..devise.forgot_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form-horizontal") do |f| %>
          <fieldset>
    <div id="error_explanation">
      <%= devise_error_messages! %>
    </div>

    <div class="form-group">
      <%= f.label :email, t('view.devise.email'), class: 'col-6 col-form-label' %>
      <div class="col-12">
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('view.devise.email') %>
      </div>
    </div>

          <div class="control-group">
            <!-- Button -->
            <div class="controls">
              <%= f.submit t('action.devise.reset_password'), class: "btn btn-primary btn-block"%>
            </div>
          </div>
          </fieldset>
  <% end %>
    </div>
  </div>
</div>