<h3><%= Category.model_name.human(count: 2) %></h3>

<table class="table table-striped table-bordered table-sm">
  <thead>
    <tr class="row">
      <th class="col-8"><%= Category.human_attribute_name("title") %></th>
      <th class="col-4"><%= t('action.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr  class="row">
        <td class="col-8"><%=  category.title %></td>
        <td class="col-4">
          <%= link_to t('action.edit'), edit_category_path(category), class: 'btn btn-sm btn-primary' %>
          <%= link_to t('action.show'), category, class: 'btn btn-sm btn-secondary' %>
          <%= link_to t('action.destroy'), category, class: 'btn btn-sm btn-danger', method: :delete,
                                                                          data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('action.category.new'), new_category_path, class: "btn btn-primary" %>
