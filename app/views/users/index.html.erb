<h3><%= User.model_name.human(count: 2) %></h3>

<table class="table table-striped table-bordered table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= User.human_attribute_name("uid") %></th>
      <th><%= t('action.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.uid %></td>
        <td>
          <%= link_to t('action.edit'), edit_user_path(user), class: 'btn btn-sm btn-primary' %>
          <%= link_to t('action.show'), user, class: 'btn btn-sm btn-secondary' %>
          <%= link_to t('action.destroy'), user, class: 'btn btn-sm btn-danger', method: :delete,
                                                                          data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('action.user.new'), new_user_path, class: "btn btn-primary" %>